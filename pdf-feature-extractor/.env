# LLM Configuration
LLM_PROVIDER=ollama                 # Options: ollama, vllm
OLLAMA_BASE_URL=http://localhost:11434
VLLM_BASE_URL=http://localhost:8000
MODEL_NAME=qwen2:7b-instruct        # Your model name
MAX_TOKENS=500
TEMPERATURE=0.1

# Paths
PDF_DIRECTORY=./data/pdfs
FEATURES_FILE=./data/features.xlsx
RESULTS_FILE=./data/results.xlsx
CHROMA_DB_PATH=./chroma_db
LOG_FILE=./logs/extraction.log

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2    # Lightweight, runs on CPU
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Processing Configuration
BATCH_SIZE=5                        # Number of PDFs to process in parallel
TOP_K_CHUNKS=3                       # Number of relevant chunks to retrieve
RETRY_ATTEMPTS=3
LOG_LEVEL=INFO
